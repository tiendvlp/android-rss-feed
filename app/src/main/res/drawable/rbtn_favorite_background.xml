<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item >
                <bitmap android:src="@drawable/ic_favorite"></bitmap>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item >
                <bitmap android:src="@drawable/ic_favorite" android:tint="@color/gold"></bitmap>
            </item>
        </layer-list>
    </item>
</selector>