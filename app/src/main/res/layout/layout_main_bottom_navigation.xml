<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/grey60"
        android:layout_height="0.5dp">
    </LinearLayout>


    <RadioGroup
            android:id="@+id/grBottomNav"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
        <com.devlogs.rssfeed.screens.common.customview.Button
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:paddingTop="15dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_hamburger"
            android:drawableTint="@color/grey80"
            android:background="@null"
            android:button="@null"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:layout_weight="1"
            />

            <RadioButton
                android:id="@+id/rbtnFavoriteFeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:scaleX="1.1"
                android:paddingTop="15dp"
                android:drawableTop="@drawable/ic_favorite"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableTint="@drawable/rbtn_check_state_color"
                android:background="@null"
                />

            <RadioButton
                android:id="@+id/rbtnReadFeeds"
                android:layout_width="wrap_content"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:button="@null"
                android:drawableTop="@drawable/ic_news"
                android:drawableTint="@drawable/rbtn_check_state_color"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@null"
                />

            <RadioButton
                android:id="@+id/rbtnAddChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="1.1"
                android:scaleY="1.1"
                android:paddingTop="15dp"
                android:button="@null"
                android:drawableTop="@drawable/ic_plus"
                android:drawableTint="@drawable/rbtn_check_state_color"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@null"
                />

        </RadioGroup>
</LinearLayout>