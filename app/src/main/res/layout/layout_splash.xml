<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".screens.splash_screen.controller.SplashActivity">
    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/news_app_preloader"
        app:lottie_autoPlay="true"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:lottie_scale="1"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_loop="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieBottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:lottie_rawRes="@raw/loading"
        app:lottie_autoPlay="true"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:lottie_scale="0.5"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/lottieTop"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_loop="true"/>

    <Button
        android:id="@+id/btnTestService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lottieBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Button"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="304dp" />
</androidx.constraintlayout.widget.ConstraintLayout>